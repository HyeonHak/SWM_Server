            .left {
                flex: 35%;
                padding: 15px 0;
            }

            .left h2 {
                padding-left: 8px;
            }
            #mySearch {
                width: 100%;
                font-size: 18px;
                padding: 11px;
                border: 1px solid #ddd;
            }

            #myMenu {
                list-style-type: none;
                padding: 0;
                margin: 0;
                text-align: center;
            }

            #myMenu li a {
                padding: 12px;
                text-decoration: none;
                color: black;
                display: block;
            }

            #myMenu li a:hover {
                background-color: #eee;
            }
            .head {
                height: 80px;
                width: 100%;
                background-color: #81bef7;
                position: absolute;
            }
            .tabs {
                display: flex;
                flex-wrap: wrap;
                height: 100%;
            }
            .tabs label {
                width: 33.333333%;
                height: 50px;
                line-height: 50px;
                font-size: 20px;
                padding: 10px 0px;
                text-align: center;
                display: block;
                cursor: pointer;
                background: white;
                font-weight: bold;
                transition: background ease 0.2s;
            }

            /*박스배경*/
            .tabs .tab {
                top: 70px;
                flex-grow: 1;
                width: 100%;
                height: 100%;
                position: absolute;
                background-image: url("remote2.png");
                background-repeat: no-repeat;
                background-position-x: 0px;
                background-position-y: 0px;
                background-size: 100% 100%;
            }
            .tabs input[type="radio"] {
                display: none;
            }

            #one {
                height: 25%;
                width: 100%;
                background-color: aqua;
                position: absolute;
                top: 100px;
            }

