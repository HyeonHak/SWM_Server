                text-align: center;
                font-weight: bold;
                color: skyblue;
            }
            #innerinfo {
                font-size: 18px;
                padding: 85px;
                text-align: center;
                font-weight: bold;
                color: blueviolet;
            }
            #upleft {
                width: 100%;
                height: 50%;
                top: 0%;
                background: url("sky.png");
                background-position-x: 0px;
                background-position-y: 0px;
                background-size: 100% 100%;
                position: absolute;
            }
            #downright {
                width: 100%;
                top: 50%;
                height: 50%;
                background: url("house.png");
                background-position-x: 0px;
                background-position-y: 0px;
                background-size: 100% 100%;
                position: absolute;
            }
            #base {
                background: black;
                display: inline-block;
                height: 20px;
                margin-left: 20px;
                margin-top: 45px;
                position: absolute;
                width: 40px;
                right: 25px;
            }
